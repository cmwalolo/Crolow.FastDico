
@using Crolow.TopMachine.Components.Pages.Settings;
@inject NavigationManager Navigation
@inject Radzen.DialogService DialogService

@inherits LayoutComponentBase

<RadzenDialog />

<RadzenLayout>
    <RadzenBody Style="background-color:black;">
        @Body
    </RadzenBody>
    <RadzenFooter>
        <RadzenMenu>
            <RadzenMenuItem Text="Home" Icon="home" Click=@(args => UpdateMenu("Home"))>
            </RadzenMenuItem>
            <RadzenMenuItem Text="Finder" Icon="match_word" Click=@(args => UpdateMenu("Finder"))>
            </RadzenMenuItem>
            <RadzenMenuItem Text="Topping" Icon="crossword" Click=@(args => UpdateMenu("Topping"))>
            </RadzenMenuItem>
            <RadzenMenuItem Text="Puzzling" Icon="extension" Click=@(args => UpdateMenu("Puzzling"))>
            </RadzenMenuItem>
            <RadzenMenuItem Text="Settings" Icon="settings" Click=@(args => UpdateMenu("Settings"))>
            </RadzenMenuItem>
        </RadzenMenu>
    </RadzenFooter>
</RadzenLayout>


@code {
    string SelectedApp = "";

    private void UpdateMenu(string menu)
    {
        SelectedApp = menu;
        switch (menu)
        {
            case "Home":
                Navigation.NavigateTo("/Home");
                break;
            case "Topping":
                Navigation.NavigateTo("/Topping");
                break;
            case "Puzzling":
                Navigation.NavigateTo("/Puzzling");
                break;
            case "Finder":
                Navigation.NavigateTo("/Finder");
                break;
            case "Settings":
                Navigation.NavigateTo("/Settings");
                break;
            default:
                break;
        }
    }
}