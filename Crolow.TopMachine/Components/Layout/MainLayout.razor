@inject NavigationManager Navigation
@inject Radzen.DialogService DialogService

@inherits LayoutComponentBase

<RadzenDialog />

<RadzenLayout>
    <RadzenSidebar Responsive="false" Style="width: max-content">
        <SidebarAlbums SelectedApp=@SelectedApp />
    </RadzenSidebar>
    <RadzenBody Style="background-color:black;">
        @Body
    </RadzenBody>
    <RadzenFooter>
        <RadzenMenu>
            <RadzenMenuItem Text="Home" Icon="home" Click=@(args => UpdateMenu("General"))>
            </RadzenMenuItem>
            <RadzenMenuItem Text="Finder" Icon="match_word" Click=@(args => UpdateMenu("General"))>
            </RadzenMenuItem>
            <RadzenMenuItem Text="Topping" Icon="crossword" Click=@(args => UpdateMenu("Albums"))>
            </RadzenMenuItem>
            <RadzenMenuItem Text="Puzzling" Icon="extension" Click=@(args => UpdateMenu("Albums"))>
            </RadzenMenuItem>
            <RadzenMenuItem Text="Settings" Icon="settings" Click=@(args => UpdateMenu("Settings"))>
            </RadzenMenuItem>
        </RadzenMenu>
    </RadzenFooter>
</RadzenLayout>


@code {
    string SelectedApp = "";

    private void UpdateMenu(string menu)
    {
        SelectedApp = menu;
        switch (menu)
        {
            case "Albums":
                Navigation.NavigateTo("/Modules/PhotoManager/Albums/Album");
                break;
            default:
                break;
        }
    }
}