	</ItemGroup>

	<ItemGroup>
		<Folder Include="Search\" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\Crolow.FastDico.Models\Crolow.FastDico.Models.csproj" />
	</ItemGroup>

	<ItemGroup>
		<None Update="GridConfigs_FR.json">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
